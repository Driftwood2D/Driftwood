{
  "database": {
    "root": "db/",
    "name": "default.ubj"
  },
  "cache": {
    "ttl": 300
  },
  "input": {
    "keybinds": {
      "up": "SDLK_UP",
      "down": "SDLK_DOWN",
      "left": "SDLK_LEFT",
      "right": "SDLK_RIGHT",
      "interact": "SDLK_SPACE",
      "face": "SDLK_LSHIFT",
      "console": "SDLK_BACKQUOTE"
    },
    "debug": true
  },
  "audio": {
    "support": ["ogg"],
    "frequency": 22050,
    "chunksize": 4096,
    "music_volume": 128,
    "sfx_volume": 128
  },
  "log": {
    "verbose": true,
    "halt": true,
    "file": "driftwood.log",
    "suppress": [
      ["Tick"],
      ["Cache", "clean", "referrers"]
    ],
    "suppress_halt": [
      ["WARNING"]
    ]
  },
  "path": {
    "root": "data/",
    "path": [
      "blue/"
    ]
  },
  "window": {
    "title": "Driftwood 2D",
    "width": 480,
    "height": 480,
    "fullscreen": false,
    "zoom": 4,
    "maxfps": 0
  }
}
